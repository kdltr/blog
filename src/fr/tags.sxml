((title . "Liste des tags")
 (category . "posts"))

`(ul
   ,(map
      (lambda (t)
        `(li (@ (id ,(pathify (string-append "tag-" (car t)))))
             ,(car t)
             (ul
               ,(map
                  (lambda (p)
                    `(li
                       (a (@ (href ,(page-path p))) ,($ 'title p))))
                   (cdr t)))))
      (sort (all-tags) (lambda (a b) (string<? (car a) (car b))))))
